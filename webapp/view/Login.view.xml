<mvc:View controllerName="ns.proposalnew.controller.Login"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <Page id="app" class="edi">

        <customHeader>

            <Bar id="_IDGenBar1" class="edit">

                <contentLeft>
                    <Image id="_IDGenImage1" src="{i18n>headerImage1}" width="10%" height="400%" />
                </contentLeft>

            </Bar>

        </customHeader>



        <VBox id="_IDGenVBox1" justifyContent="Center" alignItems="Center" fitContainer="true" class="vbox">

            <items>


                <Label id="_IDGenLabel1" text="UserName" labelFor="usernameInput" class="lable" />


                <Input id="usernameInput" type="Text" placeholder="Enter Username..." required="true"/>

                <Label id="_IDGenLabel2" text="Password" labelFor="passwordInput" class="lables"/>
                <Input id="passwordInput" type="Password" placeholder="Enter Password..." required="true" />

                <Button id="_IDGenButton1" text="Login" type="Emphasized" press=".onLoginPress"/>
            </items>

        </VBox>
    </Page>
</mvc:View>
